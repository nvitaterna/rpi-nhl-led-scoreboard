    "@vitest/coverage-v8": "^1.5.1",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.0.0",
    "msw": "^2.2.14",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1",
    "vitest": "^1.5.1"
  },
  "dependencies": {
    "@nvitaterna/rpi-led-matrix": "^1.16.0",
    "better-sqlite3": "^9.5.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "kysely": "^0.27.3",
    "node-persist": "^4.0.1",
    "pino": "^9.0.0",
    "sharp": "^0.33.3",
    "timezones-list": "^3.0.3",
    "zod": "^3.23.4"
  }
